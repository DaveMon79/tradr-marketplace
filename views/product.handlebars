<div
  id="mainprod"
  class="container text-center"
  style="margin-left: 10%; margin-top: 2%; margin-bottom: 5%"
>
  <div class="row justify-content-start">
    <div class="col-lg-2 col-md-4 col-sm-6 prodimgcont">
      <img id="product-image" src="{{product.image}}" alt="bag" />
    </div>
    <div class="col-lg-2 col-md-4 col-sm-6 prodcont">
      <p class="text-end" style="font-style: italic;">Sold by:
        {{product.user.first_name}}</p>
      <div class="heart-prod-name">
        <h3 id="productname">{{product.product_name}}</h3>
        <div id="heart" class="wrapper">
          <a class="heart btn btn-outline-danger" href="#" id="wishlist-btn"><i
              class="bi bi-heart"
            ></i></a>
        </div>
      </div>
      <div>
        <h4>Product Details</h4>
        <p id="proddesc">
          {{product.description}}
        </p>
      </div>
      <h5 id="productprice">£{{product.price}}</h5>
      <form class="purchaseform">
        <div class="qty">
          <label for="quantity">Quantity:</label>
          <input
            type="number"
            id="quantity"
            name="quantity"
            min="1"
            max="1"
            value="1"
          />
        </div>
        <button
          type="submit"
          class="btn btn-dark btn-styling2"
          style="margin-bottom: 5px; margin-top: 8px; width: 200px;"
        >Add to Cart</button>
        <button
          type="submit"
          class="btn btn-success btn-styling2"
          style="margin-bottom: 5px; width: 200px;"
        >Buy Now</button>
      </form>
      <p class="text-start" style="font-style: italic; margin-top: 10px;">Listed
        on
        {{formatDate product.createdAt}}</p>
    </div>
  </div>
</div>
<br />
<div class="recommendations" style="margin-bottom: 10%;">
  <h2 id="recommtext">More from this seller</h2>
  <div class="bg-col-white">
    <div class="container text-center">
      <div class="row parent-row-image-only">
        <!---H INDIVIDUAL ITEM STARTS HERE-->
        {{#each product.user.products}}
          <div
            class="col-lg-2 col-md-4 col-sm-6 product-container2"
            style="margin-bottom: 20px;"
            id="ftproduct"
          >
            <div class="row">
              <div class="col product-overview">
                <a href="/product/{{this.id}}"><img
                    class="product-image-sizing"
                    src="{{this.image}}"
                    alt="bag"
                  /></a>
                <a
                  href="/product/{{this.id}}"
                  style="text-decoration: none; color: black;"
                ><h2
                    class="product-title2"
                    id="fttitle"
                  >{{this.product_name}}</h2></a>
                <p class="product-price">£{{this.price}}</p>
                <button type="submit" class="btn btn-dark btn-styling2">Add to
                  Cart</button>
              </div>
            </div>
          </div>
        {{/each}}
        <!---H INDIVIDUAL ITEM ENDS HERE-->
      </div>
    </div>
  </div>
</div>

<script src="/js/wishlist.js"></script>